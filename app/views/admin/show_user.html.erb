<% provide(:title, "User") %>
<div class="row m-2">
    <div class="card">
            <div class="card-header">
                <%= @user.id %> | <%= @user.email %>
            </div>
            <div class="card-body">
                <h5 class="card-title"><%= @user.role %></h5>
                <p class="card-text"><%= @user.is_approved %></p>
                <p class="card-text"><%= @user.unconfirmed_email %></p>
            </div>
    </div>
</div>