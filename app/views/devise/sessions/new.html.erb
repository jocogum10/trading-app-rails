<div class="container col-xxl-8 px-4 py-5">
    <div class="row flex-lg-row-reverse align-items-center g-5">
        <div class="col-10 col-sm-8 col-lg-6 d-flex flex-column justify-content-center">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <h1 class="h3 mb-3 fw-normal">Please Log In</h1>
            
            <div class="mb-3">
              <%= f.label :email, for: "email", class:"form-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"email" %>
            </div>

            <div class="field">
              <%= f.label :password, for: "password", class:"form-label" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class:"form-check-input", id:"remember_me" %>
                <%= f.label :remember_me, class:"form-check-label", for:"remember_me" %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", class:"btn btn-primary" %>
            </div>
          <% end %>

          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link-primary" %>
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "link-primary" %><br />
        </div>
        <div class="col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">Rails Trading App</h1>
            <p class="lead">A trading platform where you can buy and sell stocks!</p>
            <p class="lead">Built using Ruby on Rails!</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <%= link_to "About", pages_about_path, class:"btn btn-primary btn-lg", role: "button" %>
            </div>
        </div>
    </div>
</div>



